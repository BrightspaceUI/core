{
  "extends": "brightspace/lit-config",
  "globals": {
    "Prism": false
  },
  "overrides": [{
    "files": [
      "**/demo/**.html",
      "helpers/getLocalizeResources.js"
    ],
    "rules": {
      "no-console": 0
    }
  },
  {
    "files": [
      "lang/*.js"
    ],
    "rules": {
      "quotes": 0
    }
  },
  {
    "files": "mixins/demo/**.html",
    "rules": {
      "quotes": 0,
      "no-undef": 0,
      "indent": 0
    }
  },
  {
    "files": "**/test/*",
    "extends": "brightspace/open-wc-testing-config"
  }]
}
